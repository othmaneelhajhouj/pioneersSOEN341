{

  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "types": ["node", "jest"],
    "lib": ["es2022"],

    
    "sourceMap": true,
    "skipLibCheck": true,
    "verbatimModuleSyntax": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "esModuleInterop": true,
  },
  "include": ["src", "test"]
}
